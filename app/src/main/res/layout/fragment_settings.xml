<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        android:theme="?actionBarTheme"
        android:background="@color/teal_700">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="26dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Credentials"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:id="@+id/changeCredentials"/>

        <CheckBox
            android:id="@+id/checkBox_remMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:textSize="20dp"
            android:textColor="@color/teal_700"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Optimization"
            android:textSize="26dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Erase Deleted Lists"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:id="@+id/eraseDeletedLists"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Erase Deleted Places"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="8dp"
            android:id="@+id/eraseDeletedPlaces"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Erase Deleted Events"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="8dp"
            android:id="@+id/eraseDeletedEvents"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Erase Past Events"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:id="@+id/erasePastEvents"/>

    </LinearLayout>

</LinearLayout>
